<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.0//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_0.dtd">

<struts-config>
    <form-beans>
        <form-bean name="loginForm" type="com.my_app.login.LoginForm"></form-bean>
    </form-beans>

    <global-forwards>
        <forward name="actionLoginRedir" path="/login.do" redirect="true"></forward>
        <forward name="actionHomeRedir" path="/home.do" redirect="true"></forward>
    </global-forwards>

    <action-mappings>
        <action path="/home" type="com.my_app.home.HomeAction" scope="request" input="/home.jsp">
            <forward name="homePage" path="/home.jsp" />
        </action>

        <action name="loginForm" path="/login" type="com.my_app.login.LoginAction" scope="request" input="/login.jsp">
            <forward name="loginPage" path="/login.jsp" />
        </action>
    </action-mappings>
</struts-config>